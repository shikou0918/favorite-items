!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FavoriteItems
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header
      .header-left
        %li= link_to("Favorite Items", "/", class: "title")
      - if user_signed_in?
        .header-right
          %li= link_to("投稿一覧", "/posts")
          %li= link_to("投稿する", "/posts/new")
          %li= link_to(current_user.nickname, user_path(current_user))
          %li= link_to("ログアウト", destroy_user_session_path, method: :delete)
      - else
        .header-right
          %li= link_to("投稿一覧", "/posts")
          %li= link_to("新規登録", new_user_registration_path)
          %li= link_to("ログイン", new_user_session_path)
    .wrapper
      .container
        = yield
        %footer.footer
          %p.footer-item ©2020 BestProtein

