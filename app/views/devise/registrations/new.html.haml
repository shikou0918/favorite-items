.container
  .contents.row
    %h2 新規登録
  .form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
      .field
        = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（#{@minimum_password_length}文字以上）"
      .field
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認）"
      .field
        = f.text_field :nickname, placeholder: "ニックネーム"
      .field
        = f.file_field :avatar
      .actions
        = f.submit "登録"