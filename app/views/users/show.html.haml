.user__area
  - if @user.avatar?
    = image_tag @user.avatar, class:"user__area__avatar"
  - elsif @user.nickname == "ゲストユーザー"
    = image_tag ("guestuser.jpg"), class:"user__area__avatar"
  - else
    = image_tag ("noimage.jpg"), class:"user__area__avatar"
  .user__area__profile
    %h3
      = @user.nickname 
%ul.tab-btn-box.js-btn-box
  %li.tab.js-tab.is-active 
    投稿一覧
  %li.tab.js-tab 
    いいね一覧
.tab-contents-box
  .tab-contents.js-tab-contents.is-show
    = render partial: "shared/posts-box", locals: { posts: @posts}
  .tab-contents.js-tab-contents
    = render partial: "shared/posts-box", locals: { posts: @liked_posts}

:javascript
  $(function(){
    $('.js-tab').click(function(){
      $('.tab').removeClass('is-active');
      $(this).addClass('is-active');
      $('.is-show').removeClass('is-show');
        
      const index = $(this).index();
      $('.tab-contents').eq(index).addClass('is-show');
    });
  });

