- if user_signed_in?
  - unless post.like_user(current_user.id).blank?
    = link_to post_like_path(post_id: post.id ,id: post.likes[0].id), method: :delete, remote: true do
      .vertical_like
        %i.fas.fa-heart
        %span.red-text
          = post.likes_count
  - else
    = link_to post_likes_path(post.id), method: :post, remote: true do
      .vertical_like
        %i.far.fa-heart
        %span.red-text
          = post.likes_count
- else
  - if post.likes_count > 0
    .vertical_like
      %i.fas.fa-heart
      %span.red-text
        = post.likes_count
  - else
    .vertical_like
      %i.far.fa-heart
      %span.red-text
        = post.likes_count