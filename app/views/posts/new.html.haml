.contents.row
  %h2 投稿フォーム
.form
  = form_for @post do |f|
    .form__field
      %h2 紹介するアイテム
      = f.text_field :name
    .form__field
      %h2 紹介文
      = f.text_area :content
    .form__field
      %h2 画像をアップロード
      %label.input-box__image
        = f.file_field :image, id: "preview_img"
        %img#img1{style: "width:300px;height:300px;"}/
    .form__actions
      = f.submit "投稿する", class: "form__actions__btn"