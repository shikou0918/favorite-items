= form_for [@post, @comment] do |f|
  .post__show__header
    .post__show__header__name
      = @post.name
    .post__show__header__avatar
      = link_to user_path(@post.user) do
        -if @post.user.avatar.url
          = image_tag @post.user.avatar.url, class: "post__show__header__avatar__img"
        - elsif @post.user.nickname == "ゲストユーザー"
          = image_tag ("guestuser.jpg"), class: "post__show__header__avatar__img"
        - else
          = image_tag ("noimage.jpg"), class: "post__show__header__avatar__img"
    .post__show__header__nickname
      = link_to user_path(@post.user) do
        = @post.user.nickname
    .post__show__header__date
      = @post.created_at.strftime('%Y/%m/%d') + "に投稿"
    -# .posts__list__box__like
    -#   %i.fa.fa-heart
  .post__show__body
    = image_tag(@post.image.url, class: "post__show__body__img", size: '350x250')
  .post__show__text
    = @post.content
  .comments
    - if user_signed_in?
      = f.text_area :text, cols: "30", placeholder: "コメント入力欄", rows: 2, class: "comments__area"
      = f.submit "コメントする", class: "comments__input" 
    - if @comments
      .comments__list
        .comments__list__header
          %h2 コメント一覧
        .comments__list__show
          - @comments.each do |c|
            .block
              .block__text
                = c.text
                .block__details
                  = link_to user_path(c.user), class: "block__user-name"  do
                    = c.user.nickname
                  .block____details__date
                    = c.created_at.strftime('%Y/%m/%d')